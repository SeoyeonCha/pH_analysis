function txtpng(input, output, filename) \{\
	file = input + filename;\
	open(input + filename);\
	title = File.nameWithoutExtension ;\
	run("Text Image... ", "open=&file");\
	run("32s");\
	saveAs("PNG", output + title + ".png");\
\}\
\
input = getDirectory("Input directory");\
output = getDirectory("Output directory");\
\
setBatchMode(true);\
list = getFileList(input);\
run("Close All");\
for (i = 0; i < list.length; i++)\{\
	txtpng(input, output, list[i]);\
\}\
\
setBatchMode(false);}
